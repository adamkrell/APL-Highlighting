{
    "type": "APL",
    "version": "1.0",
    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.0.0"
        }
    ],
    "resources": [
        {
            "description": "Stock color for the light theme",
            "colors": {
                "colorTextPrimary": "#151920"
            }
        },
        {
            "description": "Stock color for the dark theme",
            "when": "${viewport.theme == 'dark'}",
            "colors": {
                "colorTextPrimary": "#f0f1ef"
            }
        },
        {
            "description": "Standard font sizes",
            "dimensions": {
                "textSizeBody": 48,
                "textSizePrimary": 27,
                "textSizeSecondary": 23,
                "textSizeDetails": 20,
                "textSizeSecondaryHint": 25,
                "textSizeCustom": 32
            }
        },
        {
            "description": "Common spacing values",
            "dimensions": {
                "spacingThin": 6,
                "spacingSmall": 12,
                "spacingMedium": 24,
                "spacingLarge": 48,
                "spacingExtraLarge": 72
            }
        },
        {
            "description": "Common margins and padding",
            "dimensions": {
                "marginTop": 40,
                "marginLeft": 60,
                "marginRight": 60,
                "marginBottom": 40
            }
        }
    ],
    "styles": {
        "textStyleBase": {
            "description": "Base font description; set color and core font family",
            "values": [
                {
                    "color": "@colorTextPrimary",
                    "fontFamily": "Amazon Ember"
                }
            ]
        },
        "textStyleBase0": {
            "description": "Thin version of basic font",
            "extend": "textStyleBase",
            "values": {
                "fontWeight": "100"
            }
        },
        "textStyleBase1": {
            "description": "Light version of basic font",
            "extend": "textStyleBase",
            "values": {
                "fontWeight": "300"
            }
        },
        "textStyleBase2": {
            "description": "Regular version of basic font",
            "extend": "textStyleBase",
            "values": {
                "fontWeight": "500"
            }
        },
        "mixinBody": {
            "values": {
                "fontSize": "@textSizeBody"
            }
        },
        "mixinPrimary": {
            "values": {
                "fontSize": "@textSizePrimary"
            }
        },
        "mixinDetails": {
            "values": {
                "fontSize": "@textSizeDetails"
            }
        },
        "mixinSecondary": {
            "values": {
                "fontSize": "@textSizeSecondary"
            }
        },
        "mixinCustom": {
            "values": {
                "fontSize": "@textSizeCustom"
            }
        },
        "textStylePrimary": {
            "extend": [
                "textStyleBase1",
                "mixinPrimary"
            ]
        },
        "textStyleSecondary": {
            "extend": [
                "textStyleBase0",
                "mixinSecondary"
            ]
        },
        "textStyleBody": {
            "extend": [
                "textStyleBase1",
                "mixinBody"
            ]
        },
        "textStyleSecondaryHint": {
            "values": {
                "fontFamily": "Bookerly",
                "fontStyle": "italic",
                "fontSize": "@textSizeSecondaryHint",
                "color": "@colorTextPrimary"
            }
        },
        "textStyleDetails": {
            "extend": [
                "textStyleBase2",
                "mixinDetails"
            ]
        },

        "textStyleCustom": {
            "extend": [
                "textStyleBase1",
                "mixinCustom"
            ]
        },
        "frameStylePressable": {
            "values": [
              {
                "borderWidth": "0"
              },
              {
                "when": "${state.pressed}",
                "borderColor": "rgba(255,255,255, 0.4)",
                "borderWidth": "5px",
                "backgroundColor": "rgba(255,255,255, 0.4)"
              },
              {
                "when": "${state.focused}",
                "borderColor": "rgba(255,255,255, 0.4)",
                "borderWidth": "5px"
              }
            ]
        },
        "imageStylePressable": {
            "values": [
              {
                "overlayColor": "transparent"
              },
              {
                "when": "${state.pressed}",
                "overlayColor": "rgba(255,255,255, 0.4)"
              }
            ]
        }
    },
    "layouts": {
        "FullHorizontalListItem": {
            "parameters": [
                "listLength"
            ],
            "item": [
                {
                    "type": "Container",
                    "inheritParentState": true,
                    "height": "100vh",
                    "width": "100vw",
                    "alignItems": "center",
                    "justifyContent": "end",
                    "items": [
                        {
                            "type": "Image",
                            "inheritParentState": true,
                            "position": "absolute",
                            "height": "100vh",
                            "width": "100vw",
                            "style": "imageStylePressable",
                            "source": "${data.image.sources[0].url}",
                            "scale": "best-fill"
                        },
                        {
                            "type": "AlexaHeader",
                            "headerTitle": "${title}",
                            "headerAttributionImage": "${logo}",
                            "grow": 1
                        },
                        {
                            "type": "Text",
                            "text": "${data.textContent.primaryText.text}",
                            "style": "textStyleCustom",
                            "maxLines": 1
                        },
                        {
                            "type": "Text",
                            "text": "${ordinal} | ${listLength}",
                            "paddingBottom": "20dp",
                            "color": "white",
                            "spacing": "5dp"
                        }
                    ]
                }
            ]
        },
        "HorizontalListItem": {
            "item": [
                {
                    "type": "Frame",
                    "inheritParentState": true,
                    "style": "frameStylePressable",
                    "item": {
                        "type": "Container",
                        "maxWidth": 528,
                        "minWidth": 312,
                        "paddingLeft": 16,
                        "paddingRight": 16,
                        "paddingTop": 5,
                        "height": "100%",
                        "items": [
                            {
                                "type": "Image",
                                "source": "${data.image.sources[0].url}",
                                "height": "50vh",
                                "width": "50vh"
                            },
                            {
                                "type": "Text",
                                "text": "<b>${ordinal}.</b> ${data.textContent.primaryText.text}",
                                "style": "textStylePrimary",
                                "maxLines": 1,
                                "spacing": 12
                            }
                        ]
                    }
                }
            ]
        },
        "ListTemplate2": {
            "parameters": [
                "backgroundImage",
                "title",
                "logo",
                "hintText",
                "listData"
            ],
            "items": [
                {
                    "when": "${viewport.shape == 'round'}",
                    "type": "Container",
                    "height": "100%",
                    "width": "100%",
                    "items": [
                        {
                            "type": "Sequence",
                            "id": "sequenceComponentId",
                            "scrollDirection": "horizontal",
                            "data": "${listData}",
                            "height": "100%",
                            "width": "100%",
                            "numbered": true,
                            "item": [
                                {
                                    "type": "TouchWrapper",
                                    "item": {
                                        "type": "FullHorizontalListItem",
                                        "listLength": "${payload.listTemplate2ListData.listPage.listItems.length}"
                                    },
                                    "onPress": {
                                        "type": "Parallel",
                                        "commands":[
                                            {
                                                "type": "SendEvent",
                                                "arguments": [
                                                    "${index}"
                                                ]
                                            }
                                        ]
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Container",
                    "height": "100vh",
                    "width": "100vw",
                    "items": [
                        {
                            "type": "Image",
                            "source": "${backgroundImage}",
                            "scale": "best-fill",
                            "width": "100vw",
                            "height": "100vh",
                            "position": "absolute"
                        },
                        {
                            "type": "AlexaHeader",
                            "headerTitle": "${title}",
                            "headerAttributionImage": "${logo}"
                        },
                        {
                            "type": "Sequence",
                            "id": "sequenceComponentId",
                            "scrollDirection": "horizontal",
                            "paddingLeft": "@marginLeft",
                            "paddingRight": "@marginRight",
                            "data": "${listData}",
                            "height": "70vh",
                            "width": "100%",
                            "numbered": true,
                            "item": [
                                {
                                    "type": "TouchWrapper",
                                    "item": {
                                        "type": "HorizontalListItem"
                                    },
                                    "onPress": {
                                        "type": "Parallel",
                                        "commands":[
                                            {
                                                "type": "SendEvent",
                                                "arguments": [
                                                    "${index}"
                                                ]
                                            }
                                        ]
                                    }
                                }
                            ]
                        },
                        {
                            "type": "AlexaFooter",
                            "footerHint": "${payload.listTemplate2ListData.hintText}"
                        }
                    ]
                }
            ]
        }
    },
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "item": [
            {
                "type": "ListTemplate2",
                "backgroundImage": "${payload.listTemplate2Metadata.backgroundImage.sources[0].url}",
                "title": "${payload.listTemplate2Metadata.title}",
                "hintText": "${payload.listTemplate2Metadata.hintText}",
                "logo": "${payload.listTemplate2Metadata.logoUrl}",
                "listData": "${payload.listTemplate2ListData.listPage.listItems}"
            }
        ]
    }
}